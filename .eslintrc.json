{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ],
      "prettierOptions": {
        "semi": false
      },
    "no-console": "off"
  }
}